  "license": "ISC",
  "devDependencies": {
    "json-server": "^0.15.1",
    "node-sass": "^4.14.1",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.0",
    "npm-run-all": "^4.1.5"
  }
}
